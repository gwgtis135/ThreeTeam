<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="co.hanki.prj.member.service.MemberMapper">
	<select id="selectMember" resultType="co.hanki.prj.member.service.MemberVO">
		select * from users where id = #{id}
		<if test="password != null">
			and password= #{password}
		</if>
	</select>


	<insert id="insertMember" parameterType="co.hanki.prj.member.service.MemberVO">
	insert into users values(#{id},#{password},#{name},#{tel},#{address},#{author})
	</insert>
	
	<update id="ackMember" parameterType="co.hanki.prj.member.service.MemberVO">
	update users set author=#{author} where id=#{id}
	</update>

	<update id="updateMember" parameterType="co.hanki.prj.member.service.MemberVO">

	</update>

	<delete id="deleteMember" parameterType="co.hanki.prj.member.service.MemberVO">

	</delete>


</mapper>